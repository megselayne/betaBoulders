<%- include('../partials/boilerplate') %>

<div class='col-row'>
    <div class ='main-column'>
        <div class='route-group'>
            <div class='route-name'>
                <h2><%= userRoute.name %></h2>
            </div>
            <div class='route-sub'>
                <h3><%= userRoute.type %></h3>
                <h3><%= userRoute.rating %></h3>
            </div>
            <div class='route-sub'>
                <h3><%= userRoute.latitude %></h3>
                <h3><%= userRoute.longitude %></h3>
            </div>
            <div class='route-sub'>
                <h3><%= userRoute.status %></h3>
                <h3><%= userRoute.notes %></h3>
            </div>
        </div>
        <div class='route-buttons'>
            <button class='click big primary'>
                <a class='secondary-text' href='/routes'>All Climbs</a>
            </button>
            <button class='click big primary'>
                <a class='secondary-text' href='userRoute/edit/<%= userRoute.id %>'>Edit</a>
            <form method="POST" action="/routes/<%= climb.id %>?_method=DELETE">
                <input class='click big primary' type="submit" value="Delete">
            </form>
        </div>
    </div>
    <div class ='main-column'>
        <% if(climb.image) { %>
            <img class='climb-img' src='<%= climb.image %>'>
        <% } %>  
    </div>

</div>







<%- include('../partials/end') %>