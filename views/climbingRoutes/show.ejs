<%- include('../partials/boilerplate') %>
    <div class='col-row'>
    <div class ='main-column'>
        <div class='route-group'>
            <div class='route-name'>
                <h2><%= climb.name %></h2>
            </div>
            <div class='route-sub'>
                <h3><%= climb.type %></h3>
                <h3><%= climb.rating %></h3>
            </div>
            <div class='route-sub'>
                <h3><%= climb.latitude %></h3>
                <h3><%= climb.longitude %></h3>
            </div>
        </div>
        <div class='route-buttons'>
            <button class='click big'>
                <a class='secondary' href='/routes'>All Climbs</a>
            </button>
            <button class='click big'>
                <a class='secondary' href='/routes/<%= climb.id %>/edit'>Edit</a>
            </button>
            <form method="POST" action="/routes/<%= climb.id %>?_method=DELETE">
                <input class='click big' type="submit" value="Delete">
            </form>
        </div>
    </div>
    <div class ='main-column'>
        <% if(climb.image) { %>
            <img class='climb-img' src='<%= climb.image %>'>
        <% } %>  
    </div>

</div>


<%- include('../partials/end') %>